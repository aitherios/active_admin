<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8">

  <title><%= [@page_title, active_admin_application.site_title].compact.join(" | ") %></title>

  <% ActiveAdmin.application.stylesheets.each do |style| %>
    <%= stylesheet_link_tag style.path %>
  <% end %>
  <% ActiveAdmin.application.javascripts.each do |path| %>
    <%= javascript_include_tag path %>
  <% end %>

  <%= csrf_meta_tag %>
</head>
<body class="logged_out <%= controller.action_name %>">
  <div class="topbar">
    <div class="fill">
      <div class="container-fluid">
        <a href="/" class="brand"><%= active_admin_application.site_title %></a>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="content">
      <div class="page-header">
        <h2><%= t "active_admin.login" %></h2>
      </div>

      <% if flash.keys.any? %>
        <% flash.each do |type, message| %>
          <div class="alert-message <%= type %> fade in" data-alert="alert">
            <a href="#" class="close">&times;</a>
            <p><%= message %></p>
          </div>
        <% end %>
      <% end %>
      <div id="active_admin_content">
        <%= yield %>
      </div>
    </div>

    <div id="footer">
      <%= yield :footer %>
    </div>
  </div>
</body>
</html>
